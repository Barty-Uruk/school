<div align="center">
    <br>
    <br>
    <br>
<h2>Войти</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-md-5">
<%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email",:class => 'form-control'%>
    <div class="container d-flex h-100">
      <div class="row justify-content-center align-self-center">


      </div>
      </div>
        </div>

  <br>
  <div class="col-md-5">
    <%= f.password_field(:password, placeholder:"Пароль", autocomplete: "current-password",:class => 'form-control' )%>
  </div>
  <% if devise_mapping.rememberable? -%>

      <%= f.check_box :remember_me %>
      <%= f.label :"запомнить меня" %>
  <% end -%>


  <div class="col-md-5">
    <%= f.submit "Войти",:class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

<div align="center">
  <br>
    <br>
      <br>
<h2>Зарегистрироваться</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-md-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", :class => 'form-control' %>
  </div>

  <div class="col-md-5">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
  </div>

  <div class="col-md-5">
    <%= f.label :"Подтвердите пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
  </div>
  <br>
  <div class="col-md-5">
    <%= f.submit "Зарегистрироваться",:class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
